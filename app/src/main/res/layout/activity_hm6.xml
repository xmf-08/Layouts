<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:weightSum="5"
    android:orientation="horizontal"
    android:layout_height="match_parent"
    tools:context=".hm6">

    <LinearLayout
        android:weightSum="2"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:background="@color/black"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_marginTop="6dp"
                android:layout_marginLeft="6dp"
                android:orientation="vertical"
                android:weightSum="2"
                android:background="@color/black"
                android:layout_weight="0.5"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="vertical"
                    android:weightSum="2"
                    android:layout_weight="0.6"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.2"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <LinearLayout
                            android:layout_marginRight="6dp"
                            android:layout_marginBottom="6dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.4"
                            android:background="#253CBD">

                            <TextView
                                android:textStyle="bold"
                                android:textSize="25dp"
                                android:textColor="@color/white"
                                android:gravity="center"
                                android:text="1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                            </TextView>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1.6"
                            android:background="#673AB7">

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:weightSum="2"
                        android:layout_weight="0.8"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_marginRight="6dp"
                            android:background="#E45045"
                            android:layout_weight="1.2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:textSize="25dp"
                                android:gravity="center"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                android:text="5"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                            </TextView>

                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:weightSum="2"
                            android:layout_weight="0.8"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <LinearLayout
                                android:orientation="horizontal"
                                android:weightSum="3"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1">

                                <LinearLayout
                                    android:background="#FF9800"
                                    android:layout_weight="1"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <TextView
                                        android:textStyle="bold"
                                        android:textColor="@color/white"
                                        android:textSize="25dp"
                                        android:gravity="center"
                                        android:text="6"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">

                                    </TextView>

                                </LinearLayout> <LinearLayout
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                            </LinearLayout>

                                <LinearLayout
                                    android:background="#673AB7"
                                    android:layout_weight="1"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <TextView
                                        android:translationY="-25dp"
                                        android:textStyle="bold"
                                        android:textColor="@color/white"
                                        android:textSize="25dp"
                                        android:gravity="center"
                                        android:text="2"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">

                                    </TextView>

                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_marginTop="6dp"
                                android:background="#4CAF50"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <TextView
                                    android:gravity="center"
                                    android:textSize="25dp"
                                    android:textStyle="bold"
                                    android:textColor="@color/white"
                                    android:text="7"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                </TextView>

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_weight="1.4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_marginRight="6dp"
                        android:layout_marginTop="6dp"
                        android:background="#FF5722"
                        android:layout_weight="0.8"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:textStyle="bold"
                            android:gravity="center"
                            android:textSize="25dp"
                            android:textColor="@color/white"
                            android:text="8"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                        </TextView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="6dp"
                        android:background="#ED505663"
                        android:layout_weight="1.2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:gravity="center"
                            android:textSize="25dp"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:text="9"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                        </TextView>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:background="@color/white"
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:background="@color/white"
                    android:layout_margin="5dp"
                    android:orientation="vertical"
                    android:weightSum="2"
                    android:layout_weight="0.5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_marginBottom="5dp"
                        android:background="#1A7C1E"
                        android:layout_weight="1.4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:textSize="25dp"
                            android:text="Alphabet (Nested MondrianLayout)"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                        </TextView>

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:weightSum="2"
                        android:layout_weight="0.6"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_marginRight="5dp"
                            android:background="#ABD8AC"
                            android:layout_weight="1.3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:textSize="25dp"
                                android:text="A"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                            </TextView>

                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:weightSum="2"
                            android:layout_weight="0.7"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <LinearLayout
                                android:orientation="horizontal"
                                android:weightSum="2"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <LinearLayout
                                    android:layout_marginBottom="5dp"
                                    android:layout_marginRight="5dp"
                                    android:background="#7DBC80"
                                    android:layout_weight="1.2"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <TextView
                                        android:textSize="25dp"
                                        android:gravity="center"
                                        android:textColor="@color/black"
                                        android:textStyle="bold"
                                        android:text="B"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">

                                    </TextView>

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_marginBottom="5dp"
                                    android:background="#64B567"
                                    android:layout_weight="0.8"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <TextView
                                        android:textSize="25dp"
                                        android:gravity="center"
                                        android:textColor="@color/black"
                                        android:textStyle="bold"
                                        android:text="C"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">

                                    </TextView>

                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:orientation="horizontal"
                                android:weightSum="2"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <LinearLayout
                                    android:background="#4CAF50"
                                    android:layout_weight="0.8"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <TextView
                                        android:gravity="center"
                                        android:text="D"
                                        android:textSize="25dp"
                                        android:textStyle="bold"
                                        android:textColor="@color/black"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">

                                    </TextView>

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_marginLeft="5dp"
                                    android:background="#4BBF50"
                                    android:layout_weight="1.2"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <TextView
                                        android:gravity="center"
                                        android:textStyle="bold"
                                        android:textColor="@color/black"
                                        android:textSize="25dp"
                                        android:text="E"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">

                                    </TextView>

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:background="@color/black"
        android:orientation="vertical"
        android:weightSum="2"
        android:layout_weight="4"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_marginLeft="6dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:layout_marginRight="6dp"
            android:background="@color/teal_200"
            android:layout_weight="1.7"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:textSize="25dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:gravity="center"
                android:text="3"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_marginRight="6dp"
            android:layout_marginLeft="6dp"
            android:layout_marginBottom="6dp"
            android:background="#E91E63"
            android:layout_weight="0.3"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:textStyle="bold"
                android:textSize="25dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="4"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </TextView>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>

